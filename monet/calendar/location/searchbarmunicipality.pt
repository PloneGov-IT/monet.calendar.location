<div id="search-event-bar" i18n:domain="monet.calendar.extensions"
	 tal:define="starting_year nothing;
	 			 ending_year nothing;
				 future_years nothing;
				 date_components_support_view context/@@date_components_support;
				 values python:date_components_support_view.result(None, 0, starting_year, ending_year, future_years);
				 years values/years;
				 months values/months;
				 days values/days;
				 calendar_section_path view/getCalendarSectionPath">
				 
	<form name="searchBar"
          action="monetsearchevents"
          tal:attributes="action string: ${calendar_section_path}/@@monetsearchevents"
          class="searchBar">
		<table class="listing">
			<tr>
		      <th><label for="SearchableText" i18n:translate="label_search_event">Search event</label></th>
		      <th><label for="getEventType" i18n:translate="label_in">In</label></th>
		      <th><label for="fromDay" i18n:translate="label_from">From</label></th>
		      <th><label for="toDay" i18n:translate="label_to">To</label></th>
		      <th />
			</tr>
			<tr>
		      <td>
				<input class="searchBarText"
					name="SearchableText"
					id="SearchableText"
					type="text"
					tal:attributes="value request/SearchableText|nothing;"
					/>
		      </td>
		      <td>
		      	<select class="searchBarIn"
					name="getEventType"
	                id="getEventType"
	                tal:define="all_events_label view/monetAllEvents;
	                			firstelem python:['all_events',];
	                			usedGetEventType python:list(here.portal_catalog.uniqueValuesFor('getEventType'));
	                			usedEventTypes python:firstelem+usedGetEventType">
	                    <option value="#"
	                            tal:repeat="eventT usedEventTypes"
	                            tal:content="python: eventT=='all_events' and all_events_label or eventT"
	                            tal:attributes="value python: view.valueGetEventType(eventT);
	                            				id eventT">
								dummy
						</option>
				</select>
		      </td>
		      <td class="searchBarFrom">
		        <select class="searchBarFromDay"
		      		name="fromDay:int"
	                id="fromDay">
	                    <option value="#"
                				tal:repeat="day days"
                				tal:attributes="value day/value; selected day/selected"
                				tal:content="day/id">day</option>
				</select>
				<select class="searchBarFromMonth"
		      		name="fromMonth:int"
	                id="fromMonth">
	                    <option value="#"
                				tal:repeat="month months"
                				tal:attributes="value month/value; selected month/selected"
                				tal:content="month/title">month name</option>
				</select>
				<select class="searchBarFromYear"
		      		name="fromYear:int"
	                id="fromYear">
	                    <option value="#"
                  				tal:repeat="year years"
                  				tal:attributes="value year/value; selected year/selected"
                  				tal:content="year/id">year</option>
				</select>
		      </td>
		      <td class="searchBarTo">
		        <select class="searchBarToDay"
		      		name="toDay:int"
	                id="toDay">
	                    <option value="#"
                				tal:repeat="day days"
                				tal:attributes="value day/value; selected day/selected"
                				tal:content="day/id">day</option>
				</select>
				<select class="searchBarToMonth"
		      		name="toMonth:int"
	                id="toMonth">
	                    <option value="#"
                				tal:repeat="month months"
                				tal:attributes="value month/value; selected month/selected"
                				tal:content="month/title">month name</option>
				</select>
				<select class="searchBarToYear"
		      		name="toYear:int"
	                id="toYear">
	                    <option value="#"
                  				tal:repeat="year years"
                  				tal:attributes="value year/value; selected year/selected"
                  				tal:content="year/id">year</option>
				</select>
		      </td>
		      <td>
		      	  <input class="searchButton"
					type="submit"
					value="Search"
					i18n:attributes="value label_search;"
					/>
		      </td>
			</tr>
		</table>
    </form>
</div>
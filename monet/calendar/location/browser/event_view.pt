<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="monet.calendar.event">

<head>
    <metal:css fill-slot="css_slot">
        <style type="text/css" media="all"
            tal:content="string: @import url(${context/portal_url}/++resource++monet.calendar.event.stylesheets/monetcalendarevent.css)">
        </style>
    </metal:css>
</head>

<body>

<div metal:fill-slot="main">
    <tal:main-macro metal:define-macro="main">

        <div tal:replace="structure provider:plone.abovecontenttitle" />

        <div class="vevent">

        <h1 class="documentFirstHeading summary"> 
            <metal:field use-macro="python:here.widget('title', mode='view')">
            Title
            </metal:field>
        </h1>

        <div tal:replace="structure provider:plone.belowcontenttitle" />

        <p class="documentDescription">
            <metal:field use-macro="python:here.widget('description', mode='view')">
            Description
            </metal:field>
        </p>
                
        <div tal:replace="structure provider:plone.abovecontentbody" />

        <div class="eventDetails vcard">
        <table class="vertical listing"
               summary="Event details" i18n:attributes="summary summary_event_details;">

            <tbody>
            	<tr>
                	<th i18n:translate="event_when_from">From</th>
                	<td>
                		<span id="parent-fieldname-startDate" class="monetEventDtstart"
                              tal:content="python:here.toLocalizedTime(here.start(),long_format=0)">
                              Start Date Time
						</span>
                	</td>
                </tr>
                <tr>
                	<th i18n:translate="event_when_to">To</th>
                	<td>
                		<span id="parent-fieldname-endDate" class="monetEventDtend"
                			  tal:content="python:here.toLocalizedTime(here.end(),long_format=0)">
                			  End Date Time
                        </span>
                	</td>
                </tr>
                <tr tal:condition="python: here.getLocation() or here.getAddress()">
                    <th i18n:translate="event_where">Where</th>
                    <td class="locadd">
                    	<div class="loc">
	                        <metal:field use-macro="python:here.widget('location', mode='view')">
	                        Location
	                        </metal:field>
                        </div>
                        <div class="add">
	                        <metal:field use-macro="python:here.widget('address', mode='view')">
	                        Address
	                        </metal:field>
                        <div>
                    </td>
                </tr>
                <tr tal:condition="python: here.getTime()">
                    <th i18n:translate="event_time">Time</th>
                    <td class="time">
                        <metal:field use-macro="python:here.widget('time', mode='view')">
                        Time
                        </metal:field>
                    </td>
                </tr>
                <tr tal:condition="python: here.contact_phone() or here.contact_email() or here.event_url()"
                	tal:define="contact_email here/contact_email|nothing;
                				event_url here/event_url|nothing;
                				contact_phone here/contact_phone|nothing">
                    <th i18n:translate="event_details">For details</th>
                    <td class="details">
                    	<tal:phone condition="contact_phone">
                    		<span i18n:translate="event_ph">Phone:</span>
                    		<span tal:content="contact_phone"> Contact phone </span>
        				</tal:phone>
                    	<tal:email condition="contact_email">
	                        <a id="parent-fieldname-contactEmail"
	                           tal:replace="structure python: here.spamProtect(mailaddress=contact_email, cssclass='email fn')"
	                           />
                        </tal:email>
                        <tal:url condition="event_url">
            				<a class="url"                    
                        	   id="parent-fieldname-eventUrl"
                        	   tal:content="event_url"
                        	   tal:attributes="href event_url">
               					Event url
               				</a>
               			</tal:url>
                    </td>
                </tr>
                <tr>
                    <th i18n:translate="heading_add_to_calendar">Add event to calendar</th>
                    <td>
                        <a href="#"
                           tal:attributes="href string:$here_url/vcs_view"
                           title="Download this event in vCal format"
                           i18n:attributes="title title_add_to_vcal;">
                            <img tal:replace="structure here/icon_export_vcal.png" src="" alt="" />
                            <span i18n:translate="label_add_to_vcal">vCal</span></a><br />
                        <a href="#"
                           tal:attributes="href string:$here_url/ics_view"
                           title="Download this event in iCal format"
                           i18n:attributes="title title_add_to_ical;">
                            <img tal:replace="structure here/icon_export_ical.png" src="" alt="" />
                            <span i18n:translate="label_add_to_ical">iCal</span></a>
                    </td>
                </tr>
            </tbody>
        </table>
        </div>

		<div class="fieldEvent eventImageContainer"
             tal:condition="here/image_mini|nothing">
            <a href="#"
               tal:attributes="href string:$here_url/image/image_view_fullscreen"
               id="parent-fieldname-image">
               <img tal:replace="structure python: here.tag(scale='mini', css_class='eventImage')" src="" alt="" />
            </a>
        </div>

		<div class="fieldEvent eventTypesClassification"
             tal:condition="here/eventType">
			<label i18n:translate="event_types_classification">Event type:</label>
			<div class="listypes" tal:define="event_types here/eventType">
				<span tal:repeat="event_type python: event_types[:-1]">
					<span i18n:translate="" tal:content="event_type" />,
				</span>
				<span i18n:translate="" tal:content="python: event_types[-1]" />
			</div>
        </div>
        
        <div class="fieldEvent costDetails"
             tal:condition="here/cost">
			<label i18n:translate="event_cost_details">Cost:</label>
			<div class="strcost">
				<metal:field use-macro="python:here.widget('cost', mode='view')">
	        	Cost
				</metal:field>
			</div>
        </div>
        
        <div tal:condition="here/getCountry" class="fieldEvent countryIt">
            <metal:field use-macro="python:here.widget('country', mode='view')">
	        Country
			</metal:field>
        </div>
        
        <div tal:condition="here/getRegion" class="fieldEvent regionEm">
            <metal:field use-macro="python:here.widget('region', mode='view')">
	        Region
			</metal:field>
        </div>
        
        <div tal:condition="here/getProvince" class="fieldEvent provinceMo">
            <metal:field use-macro="python:here.widget('province', mode='view')">
	        Province
			</metal:field>
        </div>
        
        <div tal:condition="here/getMunicipality" class="fieldEvent municipalityMo">
            <metal:field use-macro="python:here.widget('municipality', mode='view')">
	        Municipality
			</metal:field>
        </div>
        
        <div tal:condition="here/getLocality" class="fieldEvent localityLo">
            <metal:field use-macro="python:here.widget('locality', mode='view')">
	        Locality
			</metal:field>
        </div>
        
        <div tal:condition="here/getZipcode" class="fieldEvent zipCode">
            <metal:field use-macro="python:here.widget('zipcode', mode='view')">
	        Zip code
			</metal:field>
        </div>
        
        <div tal:condition="here/getText" class="fieldEvent bText">
	        <metal:field use-macro="python:here.widget('text', mode='view')">
	        Body text
	        </metal:field>
        </div>
        
        <div class="fieldEvent listOfReferenceEntities"
        	 tal:define="referenceEntities here/referenceEntities"
             tal:condition="referenceEntities">
			<label i18n:translate="list_of_reference_entities">Reference entities:</label>
			<div class="listreferenceentities">
				<span tal:content="python: referenceEntities[0]" />
				<span tal:repeat="refent python: referenceEntities[1:]">
					&mdash;
					<span tal:content="refent" />
		        </span>
			</div>
        </div>
        
        <div class="fieldEvent eventAnnotations">
            <metal:field use-macro="python:here.widget('annotations', mode='view')">
	        Annotations
			</metal:field>
        </div>

		</div>
        
        <span class="visualClear"><!-- --></span>

        <div tal:replace="structure provider:plone.belowcontentbody" />

    </tal:main-macro>
</div>

</body>
</html>